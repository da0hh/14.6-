#include <iostream>
#include <string>
#include <cassert>
#include <vector>

using namespace std;

bool compareMatrices(const int matrix1[4][4], const int matrix2[4][4]) {
    for (int i = 0; i < 4; ++i) {
        for (int j = 0; j < 4; ++j) {
            if (matrix1[i][j] != matrix2[i][j]) {
                return false; 
            }
        }
    }
    return true; 
}

void makeDiagonal(int matrix[4][4]) {
    for (int i = 0; i < 4; ++i) {
        for (int j = 0; j < 4; ++j) {
            if (i != j) {
                matrix[i][j] = 0;  
            }
        }
    }
}

void printMatrix(const int matrix[4][4]) {
    for (int i = 0; i < 4; ++i) {
        for (int j = 0; j < 4; ++j) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
}

int main() {
    setlocale(LC_ALL, "RU");
    int matrixA[4][4];
    int matrixB[4][4];


    cout << "Введите элементы первой матрицы 4x4:" << endl;
    for (int i = 0; i < 4; ++i) {
        for (int j = 0; j < 4; ++j) {
            cin >> matrixA[i][j];
        }
    }

    cout << "Введите элементы второй матрицы 4x4:" << endl;
    for (int i = 0; i < 4; ++i) {
        for (int j = 0; j < 4; ++j) {
            cin >> matrixB[i][j];
        }
    }

    if (compareMatrices(matrixA, matrixB)) {
        cout << "Матрицы равны. Приводим к диагональному виду:" << endl;
        makeDiagonal(matrixA);  
        printMatrix(matrixA);   
    }
    else {
        cout << "Матрицы не равны." << endl;
    }
}
